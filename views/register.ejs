<div class="row mt-5 ">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user"></i><span style="font-size:45px; font-family:'Times New Roman', Times, serif;" class="ml-2">Register</span>
      </h1>
      <% include ./display/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">First Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Your First Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="lname">Last Name</label>
          <input
            type="name"
            id="lname"
            name="lname"
            class="form-control"
            placeholder="Enter Your Last Name"
            value="<%= typeof lname != 'undefined' ? lname : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="form-control"
            placeholder="Enter Your Phone Number"
            value="<%= typeof phone != 'undefined' ? phone : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Your Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-dark btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Already have an account? <a href="/users/login" class=" ml-2 font-weight-bold">Login</a></p>
    </div>
  </div>
</div>

