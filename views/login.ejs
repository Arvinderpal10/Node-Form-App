<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3 "><i class="fas fa-user"></i><span style="font-size:45px; font-family:'Times New Roman', Times, serif;" class="ml-2">Login</span>  </h1>
      <% include ./display/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div><br>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div><br>
        <button type="submit" class="btn btn-dark btn-block ">Login</button>
      </form>
      <p class="lead mt-4">
        Don't have an account ? <a href="/users/register" class=" ml-2 font-weight-bold">Create Account</a>
      </p>
    </div>
  </div>
</div>
